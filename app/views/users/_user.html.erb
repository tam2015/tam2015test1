<% if user %>
  <tr id="user_<%= user.id %>">
    <td data-title="<%= @klass.human_attribute_name(:name       ) %>">
      <%= link_to user_path(user), title: user.first_name do %>
        <%= truncate(user.first_name, length: 75) %>
      <% end %>
    </td>
    <td data-title="<%= @klass.human_attribute_name(:email  ) %>">
      <%= user.email %>
    </td>
    <td data-title="<%= @klass.human_attribute_name(:phone  ) %>">
      <%= user.phone %>
    </td>
    <td data-title="<%= t_model(Account) %>">
      <%= user.boxes.count %>
    </td>
    <td data-title="<%= t_model(Account) %>">
      <% if user.dashboards.first and user.dashboards.first.aircrm_preferences.first %>
      <%= user.dashboards.first.aircrm_preferences.first.data %>
      <% end %>
    </td>
    <td data-title="<%= t_model(Account) %>">
      <% if user.dashboards.first and user.dashboards.first.preferences.average_sales %>
      <%= user.dashboards.first.preferences.average_sales %>
      <% end %>
    </td>
    <td data-title="<%= t_model(Account) %>">
      <% if user.dashboards.first %>      
        <%= user.dashboards.first.id %>
      <% end %>
    </td>
    <td data-title="<%= t_model(Account) %>">
      <% if user.dashboards.first %>            
        <%= user.dashboards.first.meli_user_id %>
      <% end %>
    </td>
    <td data-title="<%= Subscription.human_attribute_name(:expires_in  ) %>">
      <%= user.account.subscription.expires_in %>
    </td>
    <td class="table-actions">

    </td>
  </tr>
<% end %>

