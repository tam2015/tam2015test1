<% if @items %>
<% @items.each do |item| %>


<div class="group-rom-box">
  <div class="first-part-box">
    <p style="font-weight: bold">
      código
    </p>
    <p>
      <%= item.f_codigo %>
    </p>

    </br>
    <p style="font-weight: bold">
      referência
    </p>
    <p>
      <%= item.f_referencia %>
    </p>
  </div>

  <div class="second-part-box">
    <%= item.f_descricao %>
  </div>


  <div class="third-part-box">
    <dl class="dl-horizontal" >
      <dt>
        grupo
      </dt>
      <dd>
        <%= item.f_grupo %>
      </dd>

      <dt>
        linha
      </dt>
      <dd>
        <%= item.f_linha %>
      </dd>

      <dt>
        coleção
      </dt>
      <dd>
        <%= item.f_colecao %>
      </dd>

      <dt>
        marca
      </dt>
      <dd>
        <%= item.f_marca %>
      </dd>
    </dl>
  </div>

  <div class="fourth-part-box">
    <dl class="dl-horizontal" >
      <dt>
        próprio
      </dt>
      <dd>
        <%=item.f_storage%>
      </dd>

      <dt>
        franquiados
      </dt>
      <dd>
        <%=item.quantity_from_store%>
      </dd>

      <dt>
        total
      </dt>
      <dd>
        <%=item.quantity_from_store%>
      </dd>

      </br>
      <dt>
      </dt>
      <dd>
        <%= link_to '', stores_per_item_dashboard_storages_path(f_codigo: item.f_codigo), remote: true, class: "fa fa-user text-success" %>
      </dd>
    </dl>
  </div>

  <div class="fifth-part-box">
    <dl class="dl-horizontal" >
      <dt>
        custo
      </dt>
      <dd>
        R$<%= item.f_preco_custo %>
      </dd>

      <dt>
        venda
      </dt>
      <dd>
        R$<%= item.f_preco_venda %>
      </dd>
    </dl>
  </div>

  <div class="sixth-part-box">

    <button type="button" class="btn btn-round btn-success btn-xs"><%= item.status %></button>

    <dl class="dl-horizontal" >
      <dt>
        início
      </dt>
      <dd>
        <%= item.start_time %>
      </dd>

      <dt>
         término
       </dt>
       <dd>
         <%= item.end_time %>
       </dd>

     <dt>
        qtd anunciada
      </dt>
      <dd>
        50
      </dd>

      <dt>
         preço
       </dt>
       <dd>
         R$500
       </dd>

       <dt>
          qtd não anunciada
        </dt>
        <dd>
          30
        </dd>

      </br>
      <dt>
      </dt>
      <dd>
        <%= link_to '', stores_per_item_dashboard_storages_path(f_codigo: item.f_codigo), remote: true, class: "fa fa-pencil text-success" %>
      </dd>
    </dl>
  </div>

  <div class="senth-part-box">
    <a href="javascript:;">
        <i class="fa fa-envelope text-success"></i>
        <%= link_to 'Atualizar'%>
    </a>
  </div>

</div>


<%end%>
<%end%>
