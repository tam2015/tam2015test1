<!-- page start
-->

<section class="panel" style="background: #2a3542 ">
  <ul class="panel" style= "width: 100%; height: 60px; padding-top:15px; padding-left: 30px;">
    <li class="dropdown" style="padding-right: 30px; float: left">
      <%= link_to dashboard_label_index_path(@dashboard), id: "refresh_items", class: "btn btn-info btn-sm" do %>
        <%= translate_button_content(:refresh, Box, icon: :refresh, label_class: "sr-only") %>
      <% end %>
    </li>
    <li class="dropdown" style="padding-right: 30px; float: left">
      <form action="#" class="pull-right position">
        <%= form_tag dashboard_label_index_path, method: :get do %>
          <input type="text" placeholder="buscar pela ordem" class="form-control search-btn "
            <%= text_field_tag :query, params[:query] %>
            <%= submit_tag "Search", name: nil, class: "hidden" %>

          <%end%>
      </form>
    </li>
    <li class="dropdown" style="padding-right: 30px; float: left">
      <a style="color:#31708f  ; background: #d9edf7 " href="#" class="form-control input-sm m-bot15" data-toggle="dropdown"> Status <b class="caret"></b></a>
      <ul class="dropdown-menu">
        <% ["Todas"].each do |status| %>
          <li><%= link_to status, dashboard_label_index_path(print_status: status), method: :get %></li>
        <% end %>
      </ul>
    </li>
  </ul>
</section>

<div class="row">
  <div class="col-lg-12">
    <section class="panel" id="all-items">
      <header class="panel-heading">
        <ul class="breadcrumb">
          <li>
            <a href="/d">Pain√©l</a>
          </li>
          <li class="active">
            Etiquetas
          </li>
        </ul>
      </header>
      <div class="panel-body">
        <% if @shippings.present? %>
          <div class="no-more-tables">
            <table class="display table table-bordered table-striped table-condensed no-more-tables">
              <thead>
                <%= render "index_table_head" %>
              </thead>
              <tbody id="items-body">
              <%= form_tag dashboard_multiple_meli_labels_path, method: :get do %>
                <%= render 'shipping' %>
               <%= submit_tag "Imprimir selecionadas", style: "background-color: #58c9f3; color: #fff" %>
               <% end %>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>

<div class="col-md-12" id="question_paginate" >
<%= will_paginate @shippings, previous_label: h("<"), next_label: h(">") %>
</div>
