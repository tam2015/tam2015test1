<section class="panel">
  <ul class="panel" style= "width: 100%; height: 60px; padding-top:15px; padding-left: 30px;">
    <li class="dropdown" style="padding-right: 30px; float: left">
        <a style="color:#333; background: #f5f5f5" href="#" class="form-control input-sm m-bot15" data-toggle="dropdown"> Categorias <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% categories.each do |category, name| %>
            <li><%= link_to name, dashboard_trends_by_category_path(category: category), method: :get %></li>
          <% end %>
        </ul>
    </li>
  </ul>
</section>


<table class="table table-bordered table-striped table-condensed" style="background: #fff">
    <thead>
    <tr>
        <th>Palavra Chave</th>
        <th>Ações</th>
    </tr>
    </thead>
    <% @trends.each do |trend| %>
    <tbody>
    <tr>
        <td style="width: 30px">
          <div class="first-part-box">

            <p class="badge alert-success">
            <%= trend.keyword %>
            </p>

          </div>
        </td>

        <td style="width: 30px">
          <div class="second-part-box">

            <p class="pull-left">
              <%= link_to "ver" %>
            </p>

          </div>
        </td>
    </tr>

    </tbody>
  <% end %>
</table>
